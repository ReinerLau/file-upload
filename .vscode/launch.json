  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server",
      "request": "launch",
      "runtimeArgs": ["run-script", "server"],
      "runtimeExecutable": "pnpm",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Client",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
